{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-4">
                <div class="card">
                    {{ include('partials/_account-navbar.html.twig') }}
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="fs-3 fw-bold text-end">{{ 'email-addresses'|trans|upper }}</div>
                <hr class="mt-0"/>


                {{ form_start(defaultEmailForm) }}
                <div class="card">
                    <div class="card-header fw-bold">{{ 'email-addresses'|trans|capitalize }}</div>

                    <div class="list-group list-group-flush">
                        <a href="{{ path('create_user_email') }}"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>{{ 'add-email-address'|trans }}</div>
                            <div class="bi bi-plus-circle fs-4"></div>
                        </a>
                        <div class="list-group-item">
                            {{ 'set-default-email-address'|trans }}
                        </div>
                    </div>
                    {{ form_row(defaultEmailForm.email) }}
                    <div class="card-footer d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-100">{{ 'save'|trans }}</button>
                    </div>
                </div>
                {{ form_end(defaultEmailForm) }}

            </div>
        </div>
    </div>
    </div>
{% endblock %}