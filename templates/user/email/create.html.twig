{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-4">
                <div class="card">
                    {{ include('partials/_account-navbar.html.twig') }}
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="fs-3 fw-bold text-end">{{ 'add-email-addresses'|trans|upper }}</div>
                <hr class="mt-0"/>

                {{ form_start(emailForm) }}
                {{ form_row(emailForm.address) }}
                <button type="submit" class="btn btn-primary w-100">{{ 'save'|trans }}</button>
                {{ form_end(emailForm) }}

            </div>
        </div>
    </div>
    </div>
{% endblock %}