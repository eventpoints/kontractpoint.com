{% extends 'base.html.twig' %}

{% block body %}

    <div class="grid grid-cols-4 justify-center items-center gap-4 mb-4">
        <div class="w-full">
            {{ form_start(businessForm) }}
            {{ form_row(businessForm.name) }}
            {{ form_row(businessForm.registrationNumber) }}
            {{ form_row(businessForm.tagline) }}
            {{ form_row(businessForm.variant) }}
            <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">{{ 'create-business'|trans }}</button>
            {{ form_end(businessForm) }}
        </div>
    </div>

{% endblock %}